\ProvidesPackage{rddtheme}
\usepackage{transparent}

% Définir les couleurs
\definecolor{myColor1}{RGB}{0,0,0} % Noir
\definecolor{myColor2}{RGB}{255,255,255} % Blanc

% Définir le thème global
\mode<presentation>
\setbeamercolor{normal text}{fg=myColor1,bg=myColor2}
\setbeamercolor{structure}{fg=myColor1}

% Définir le thème du titre
\setbeamertemplate{frametitle}{
  \vspace*{1cm} % Espacement en haut
  \begin{center}
    \textbf{
      \insertframetitle % Insérer le titre
    }
  \end{center}
  \par
  \vspace*{-0.5cm} % Espacement en bas
}

\usebackgroundtemplate%
{   {\transparent{0.2}
    \includegraphics[width=\paperwidth,height=\paperheight]{/home/alix/diapo_diplomation/confetti2.png}%
}
}

